<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Motorsports Encyclopedia</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Motorsports Encyclopedia", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li>
                @Html.ActionLink("Home", "Index", "Home") |
                @Html.ActionLink("About", "About", "Home") |
                @Html.ActionLink("Cars", "Index", "Car") |
                @Html.ActionLink("Tracks", "Index", "Track") |
                @Html.ActionLink("Companies", "Index", "Company") |
                @Html.ActionLink("Teachers", "Index", "Teacher") |
                @Html.ActionLink("Drivers", "Index", "Driver") |
                @Html.ActionLink("Chat Room", "Chat", "Home")
            </li>
        </ul>
        @Html.Partial("_LoginPartial")
    </div>
</div>
    </div>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Motorsports Encyclopedia</p>
    </footer>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
