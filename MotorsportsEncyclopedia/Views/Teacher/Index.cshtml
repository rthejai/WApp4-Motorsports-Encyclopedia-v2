@model MotorsportsEncyclopedia.ViewModels.TeacherIndexData

@{
    ViewBag.Title = "Teachers";
}

<h2>Teachers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Last Name
        </th>
        <th>
            First Name
        </th>
        <th>
            Hire Date
        </th>
        <th>
            Location
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Teachers)
    {
        string selectedRow = "";
        if (item.ID == ViewBag.TeacherID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.ID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

@if (Model.Tracks != null)
{
    <h3>Track Taught by Selected Teacher</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>ID</th>
            <th>Track Name</th>
        </tr>

        @foreach (var item in Model.Tracks)
        {
            string selectedRow = "";
            if (item.TrackID == ViewBag.TrackID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Select", "Index", new { trackID = item.TrackID })
                </td>
                <td>
                    @item.TrackID
                </td>
                <td>
                    @item.TrackName
                </td>
            </tr>
        }

    </table>
}

@if (Model.Enrollments != null)
{
    <h3>
        Cars Enrolled in Selected Track
    </h3>
    <table class="table">
        <tr>
            <th>Car Name</th>
            <th>Track Name</th>
        </tr>
        @foreach (var item in Model.Enrollments)
        {
            <tr>
                <td>
                    @item.Car.CarName
                </td>
                <td>
                    @item.Track.TrackName
                </td>
            </tr>
        }
    </table>
}
